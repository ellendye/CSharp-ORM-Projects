@model LoginUser

<div>
    <h1 class="display-4">Login</h1>
    <form asp-action="Login" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="LoginEmail"></label>
            <input class="form-control" type="text" asp-for="LoginEmail">
            <span asp-validation-for="LoginEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginPassword"></label>
            <input class="form-control" type="password" asp-for="LoginPassword">
            <span asp-validation-for="LoginPassword" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-dark">
    </form>
</div>