@model Wedding

<div>
    <div class="d-flex justify-content-between align-items-end">
        <h1 class="display-4">Plan Your Wedding</h1>
        <div>
            <a class="m-1" href="/dashboard">Dashboard</a>
            <a class="m-1" href="/Logout">Logout</a>
        </div>
    </div>
    <form asp-action="PlanWedding" asp-controller="Home" method="post" class="w-75">
        <div class="form-group">
            <label asp-for="WedderOne"></label>
            <input class="form-control" asp-for="WedderOne">
            <span asp-validation-for="WedderOne" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="WedderTwo"></label>
            <input class="form-control" asp-for="WedderTwo">
            <span asp-validation-for="WedderTwo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input class="form-control" asp-for="Date">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input class="form-control" asp-for="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-dark">
    </form>
</div>